unalias dirs &> /dev/null
unalias pushd &> /dev/null
unalias popd &> /dev/null

alias dirs='dirs -v'

pushdi()
{
	pushd $@ 1> /dev/null
	dirs
}
alias pushd='pushdi'

popdi()
{
	popd $@ 1> /dev/null
	dirs	
}

alias popd='popdi'

#alias peekd='popd 1> /dev/null; pushd .'
peekdi()
{
	current_dir="$PWD"
	popd 1> /dev/null
	pushd .
	\cd "$current_dir"
	\cd - &> /dev/null
}

alias peekd='peekdi'
